<%= render 'shared/title', title: 'Equipment' %>

<% if flash.any? %>
  <%= render 'shared/flash_messages' %>
<% end %>

<%= render 'shared/errors', obj: @equipment %>

<div class="container">
  <%= form_for @equipment, html: {class: "form-inline", role: "form"} do |f| %>
    <div class="form-group"> 
      <%= f.label :name, 'New equipment:' %>
      <%= f.text_field :name, class: "form-control" %>
      <%= f.submit 'Save', class: 'btn confirmation_button' %>
    </div>
  <% end %>
  <br/>
  <div class="row row-same-height">
    <div class="col-md-3 column_border">
      <h4 class="column_title">All Equipment</h4>
      <% if @equipment_pieces.nil? %>
        <p>There is currently no equipment to display.<p>
      <% else %>
        <% @equipment_pieces.each do |equipment| %>
          <%= link_to equipment_piece_path(equipment), remote: true, id: equipment.id, class: 'listing' do %>
            <span class="glyphicon glyphicon-chevron-right"></span><%= ' ' + equipment.name.capitalize %>
          <% end %><br />
        <% end %>
        <%= will_paginate @equipment_pieces %>
      <% end %>
    </div>
    <div id="second_column" class="col-md-3">
      <div id="exercises">
      </div>
    </div>
    <div class="col-md-6">
      <div id="exercise">
      </div>
    </div>
  </div>
</div>