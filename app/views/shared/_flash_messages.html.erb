<% flash.keys.each do |key| %>
  <div class="errors">
    <div class="alert alert-<%= key == 'notice' ? 'success' : 'danger' %> alert-dismissible fade in" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <%= flash[key] %>
    </div>
  </div>
<% end %>