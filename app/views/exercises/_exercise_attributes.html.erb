<dl class="dl-horizontal">
  <dt>Creator:</dt>
  <% if logged_in? && (current_user == object.creator) %>
    <dd>Me</dd>
  <% else %>
    <dd><%= object.creator.username %></dd>
  <% end %>
  <% unless object.description.empty? %>
    <dt>Description:</dt>
    <dd><%= object.description %></dd>
  <% end %>
  <% unless object.equipment_pieces.first.nil? %>
    <dt>Necessary equipment:</dt>
    <% object.equipment_pieces.each do |equipment| %>
      <dd><%= equipment.name %></dd>
    <% end %>
  <% end %>
  <dt>Targeted body part:</dt>
  <% object.body_parts.each do |body_part| %>
    <dd><%= body_part.name %></dd>
  <% end %>
  <dt>Difficulty:</dt>
  <dd><%= object.difficulty %></dd>
  <% unless object.categories.first.nil? %>
    <dt>Category:</dt>
    <% object.categories.each do |category| %>
      <dd><%= category.name %></dd>
    <% end %>
  <% end %>
  <% unless object.image_url.nil? %>
    <dt>Image:</dt>
    <dd><%= image_tag object.image_url(:thumb).to_s, class: 'thumbnail' %></dd>
  <% end %>
</dl>