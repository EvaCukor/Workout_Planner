<dl class="dl-horizontal">
  <dt>Creator:</dt>
  <% if logged_in? && (current_user == obj.creator) %>
    <dd>Me</dd>
  <% else %>
    <dd><%= obj.creator.username.capitalize %></dd>
  <% end %>
  <% unless obj.description.empty? %>
    <dt>Description:</dt>
    <dd><%= obj.description.capitalize %></dd>
  <% end %>
  <% unless obj.equipment_pieces.first.nil? %>
    <dt>Necessary equipment:</dt>
    <% obj.equipment_pieces.each do |equipment| %>
      <dd><%= equipment.name.capitalize %></dd>
    <% end %>
  <% end %>
  <dt>Targeted body part:</dt>
  <% obj.body_parts.each do |body_part| %>
    <dd><%= body_part.name.capitalize %></dd>
  <% end %>
  <dt>Difficulty:</dt>
  <dd><%= obj.difficulty %></dd>
  <% unless obj.categories.first.nil? %>
    <dt>Category:</dt>
    <% obj.categories.each do |category| %>
      <dd><%= category.name.capitalize %></dd>
    <% end %>
  <% end %>
</dl>