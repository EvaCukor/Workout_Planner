<!DOCTYPE html>
<html>
<head>
  <title>WorkoutPlanner</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if current_page?(root_path) || current_page?(login_path) %>
    <div id="homepage">
      <h1 id="app_name"><strong>Workout Planner</strong></h1>
      <%= yield %>
    </div>
  <% else %>
    <%= render 'layouts/navigation' %>
    <%= yield %>
  <% end %>
  
</body>
</html>