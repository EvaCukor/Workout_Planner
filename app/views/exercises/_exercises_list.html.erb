<% object.each do |exercise| %>
  <%= link_to exercise_path(exercise), remote: true, id: exercise.id, class: 'listing' do %>
    <span class="glyphicon glyphicon-chevron-right"></span><%= ' ' + exercise.name.capitalize %>
    &nbsp;
    <% if exercise.total_votes == 1 %>
      <small>(<%= exercise.total_votes %> like)</small>
    <% else %>
      <small>(<%= exercise.total_votes %> likes)</small>
    <% end %>
  <% end %>
  <br />
<% end %>