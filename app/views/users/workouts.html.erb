<%= render 'shared/title', title: 'Workouts' %>

<% if flash.any? %>
  <%= render 'shared/flash_messages' %>
<% end %>

<div class="container">
  <%= link_to 'Create a new workout', new_workout_path, class: "link_button" %>
</div>

<div class="container">
    <div class="row row-same-height">
      <div class="col-md-3 column_border">
        <%= render 'shared/column_title', column_title: 'Workouts by Users' %>
        <%= link_to users_workouts_path, remote: true, class: 'listing' do %>
          <span class="glyphicon glyphicon-chevron-right"></span><%= ' All workouts' %>
        <% end %>
        <hr/>
        <%= link_to user_path(current_user), remote: true, class: 'listing' do %>
          <span class="glyphicon glyphicon-chevron-right"></span><%= ' Me' %>
        <% end %>
        <hr/>
        <% if @users.count == 1 %>
          <p>There are no other users.</p>
        <% else %>
          <%= render 'users_list' %>
          <%= will_paginate @users %>
        <% end %>
      </div>
    <div id="second_column" class="col-md-3">
      <div id="workouts">
      </div>
    </div>
    <div class="col-md-6">
      <div id="workout">
      </div>
    </div>
  </div>
</div 